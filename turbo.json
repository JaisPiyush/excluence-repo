{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "backend#build": {
      "dependsOn": ["@excluence-repo/discord-connector#build"],
      "outputs": ["dist/**"]
    },
    "backend#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@excluence-repo/discord-connector#build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
